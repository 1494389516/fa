.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 筛选栏 */
.filter-bar {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.1);
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.filter-scroll {
  flex: 1;
  white-space: nowrap;
}

.filter-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.filter-item.active {
  background: rgba(255, 255, 255, 0.2);
  color: #ffffff;
  border-color: rgba(255, 255, 255, 0.3);
}

.blogger-filter {
  flex-shrink: 0;
}

.selected-blogger {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(46, 204, 113, 0.2);
  border-radius: 32rpx;
  border: 2rpx solid rgba(46, 204, 113, 0.3);
}

.blogger-name {
  color: #ffffff;
  font-size: 24rpx;
  margin-right: 12rpx;
}

.clear-btn {
  width: 32rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: bold;
}

.select-blogger-btn {
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

/* 视频列表 */
.video-list {
  padding: 20rpx;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid #ffffff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-spinner.small {
  width: 40rpx;
  height: 40rpx;
  border-width: 4rpx;
  margin-bottom: 12rpx;
}

.loading-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.6;
  margin-bottom: 40rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
}

/* 视频项 */
.video-item {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.video-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.15);
}

.video-cover {
  position: relative;
  width: 100%;
  height: 400rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.duration {
  position: absolute;
  bottom: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 32rpx;
}

.video-info {
  padding: 30rpx;
}

.blogger-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.blogger-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.blogger-name {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

.verified-icon {
  width: 32rpx;
  height: 32rpx;
  background: #2ecc71;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
}

.video-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 1.4;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.video-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.4;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.video-stats {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.time-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-more {
  display: flex;
  align-items: center;
  gap: 16rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

.load-more-tip {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

.no-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}