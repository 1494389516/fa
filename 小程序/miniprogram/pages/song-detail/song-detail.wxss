/* pages/song-detail/song-detail.wxss */
.container {
  padding: 20rpx;
  background-color: #1a1a2e;
  min-height: 100vh;
}

.song-detail {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.song-info {
  background-color: #16213e;
  border-radius: 15rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.song-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.song-artist {
  font-size: 28rpx;
  color: #00d4ff;
}

.song-album,
.song-duration,
.song-date {
  font-size: 24rpx;
  color: #b0b0b0;
}

.song-stats {
  display: flex;
  justify-content: space-around;
  background-color: #16213e;
  border-radius: 15rpx;
  padding: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #b0b0b0;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  background-color: #16213e;
  color: #ffffff;
  border: 1px solid #0f3460;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.action-btn.primary {
  background-color: #00d4ff;
  border-color: #00d4ff;
}