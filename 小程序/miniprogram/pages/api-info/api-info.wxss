/* pages/api-info/api-info.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
  padding: 0 20rpx;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  margin-right: 20rpx;
}

.back-icon {
  font-size: 32rpx;
  color: #ffffff;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

/* 内容区域 */
.content {
  padding-bottom: 40rpx;
}

/* 介绍区域 */
.intro-section {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.intro-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #00d4ff;
  margin-bottom: 16rpx;
}

.intro-desc {
  display: block;
  font-size: 26rpx;
  color: #b0b0b0;
  line-height: 1.6;
}

/* API卡片列表 */
.api-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 30rpx;
}

.api-card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.platform-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffffff;
}

.status-badge {
  background: rgba(255, 107, 53, 0.2);
  color: #ff6b35;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.card-section {
  margin-bottom: 24rpx;
}

.card-section:last-of-type {
  margin-bottom: 0;
}

.section-title {
  display: block;
  font-size: 26rpx;
  font-weight: bold;
  color: #00d4ff;
  margin-bottom: 16rpx;
}

/* 要求列表 */
.requirement-list,
.limitation-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.requirement-item,
.limitation-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.requirement-dot {
  color: #00d4ff;
  font-size: 24rpx;
  line-height: 1.2;
}

.limitation-dot {
  font-size: 20rpx;
  line-height: 1.2;
}

.requirement-text,
.limitation-text {
  flex: 1;
  font-size: 24rpx;
  color: #b0b0b0;
  line-height: 1.4;
}

/* API列表 */
.api-list-items {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.api-item {
  background: rgba(0, 212, 255, 0.1);
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
}

.api-text {
  font-size: 22rpx;
  color: #00d4ff;
  font-family: 'Courier New', monospace;
}

/* 卡片底部 */
.card-footer {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.doc-btn {
  width: 100%;
  background: linear-gradient(135deg, #00d4ff, #0099cc);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
}

/* 演示说明 */
.demo-notice {
  background: rgba(0, 255, 136, 0.1);
  border: 1rpx solid rgba(0, 255, 136, 0.3);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
}

.notice-icon {
  font-size: 40rpx;
}

.notice-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.notice-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #00ff88;
}

.notice-desc {
  font-size: 24rpx;
  color: #b0b0b0;
  line-height: 1.6;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 0 16rpx;
  }
  
  .intro-section,
  .api-card,
  .demo-notice {
    padding: 24rpx;
  }
  
  .platform-name {
    font-size: 28rpx;
  }
  
  .status-badge {
    font-size: 20rpx;
    padding: 6rpx 12rpx;
  }
}