/* pages/video-detail/video-detail.wxss */
.container {
  padding: 20rpx;
  background-color: #1a1a2e;
  min-height: 100vh;
}

.video-detail {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.video-info {
  background-color: #16213e;
  border-radius: 15rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.video-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.video-author {
  font-size: 28rpx;
  color: #00d4ff;
}

.video-time {
  font-size: 24rpx;
  color: #b0b0b0;
}

.video-stats {
  display: flex;
  justify-content: space-around;
  background-color: #16213e;
  border-radius: 15rpx;
  padding: 30rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #b0b0b0;
}

.stat-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

.video-description {
  background-color: #16213e;
  border-radius: 15rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.desc-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
}

.desc-content {
  font-size: 26rpx;
  color: #b0b0b0;
  line-height: 1.6;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  background-color: #00d4ff;
  color: #ffffff;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
}